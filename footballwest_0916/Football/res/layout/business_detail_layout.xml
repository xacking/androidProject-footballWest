<?xml version="1.0" encoding="utf-8"?>

    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5b5b5b"
    android:orientation="vertical" >
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7e7e7e"
            android:orientation="vertical"
            android:padding="20dp" >
            
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:text="Business Name"
                android:textColor="#002299"
                android:textSize="20sp"
                android:textStyle="bold" />
		
		    <TextView
		        android:id="@+id/business_detail_name"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:background="#3b3b3b"
		        android:gravity="left|center_vertical"
		        android:maxLines="3"
		        android:minLines="3"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:text="TextView"
		        android:textColor="#ffffff"
		        android:textSize="20sp" />
		
		    <TextView
		        android:id="@+id/TextView13"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginTop="10dp"
		        android:text="Details"
		        android:textColor="#002299"
		        android:textSize="20sp"
		        android:textStyle="bold" />
		
		    <TextView
		        android:id="@+id/business_detail_detail"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:background="#3b3b3b"
		        android:gravity="left|center_vertical"
		        android:lines="5"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:text="TextView"
		        android:textColor="#ffffff"
		        android:textSize="20sp" />
		
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginTop="10dp"
		        android:text="Address"
		        android:textColor="#002299"
		        android:textSize="20sp"
		        android:textStyle="bold" />
		
		    <TextView
		        android:id="@+id/business_detail_address"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:background="#3b3b3b"
		        android:lines="2"
		        android:paddingBottom="2dp"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:paddingTop="2dp"
		        android:text="TextViewgfdsgfsfffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff"
		        android:textColor="#ffffff"
		        android:textSize="20sp" />
		
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginTop="10dp"
		        android:text="City"
		        android:textColor="#002299"
		        android:textSize="20sp"
		        android:textStyle="bold" />
		
		    <TextView
		        android:id="@+id/business_detail_city"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:background="#3b3b3b"
		        android:gravity="left|center_vertical"
		        android:lines="2"
		        android:paddingBottom="2dp"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:paddingTop="2dp"
		        android:text="TextView"
		        android:textColor="#ffffff"
		        android:textSize="20sp" />
		
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginTop="10dp"
		        android:text="State"
		        android:textColor="#002299"
		        android:textSize="20sp"
		        android:textStyle="bold" />
		
		    <TextView
		        android:id="@+id/business_detail_state"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:background="#3b3b3b"
		        android:gravity="left|center_vertical"
		        android:lines="2"
		        android:paddingBottom="2dp"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:paddingTop="2dp"
		        android:text="TextView"
		        android:textColor="#ffffff"
		        android:textSize="20sp" />
		
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginTop="10dp"
		        android:text="Country"
		        android:textColor="#002299"
		        android:textSize="20sp"
		        android:textStyle="bold" />
		
		    <TextView
		        android:id="@+id/business_detail_country"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:background="#3b3b3b"
		        android:gravity="left|center_vertical"
		        android:lines="2"
		        android:paddingBottom="2dp"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:paddingTop="2dp"
		        android:text="TextView"
		        android:textColor="#ffffff"
		        android:textSize="20sp" />
		
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginTop="10dp"
		        android:text="Phone"
		        android:textColor="#002299"
		        android:textSize="20sp"
		        android:textStyle="bold" />
		
		    <TextView
		        android:id="@+id/business_detail_phone"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:background="#3b3b3b"
		        android:gravity="left|center_vertical"
		        android:lines="2"
		        android:onClick="onPhone"
		        android:paddingBottom="2dp"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:paddingTop="2dp"
		        android:text="TextView"
		        android:textColor="#ff0000"
		        android:textSize="20sp" />
		
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginTop="10dp"
		        android:text="Fax"
		        android:textColor="#002299"
		        android:textSize="20sp"
		        android:textStyle="bold" />
		
		    <TextView
		        android:id="@+id/business_detail_fax"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:background="#3b3b3b"
		        android:gravity="left|center_vertical"
		        android:lines="2"
		        android:paddingBottom="2dp"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:paddingTop="2dp"
		        android:text="TextView"
		        android:textColor="#ff0000"
		        android:textSize="20sp" 
		        android:onClick="onFax"/>
            
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginTop="10dp"
		        android:text="Email"
		        android:textColor="#002299"
		        android:textSize="20sp"
		        android:textStyle="bold" />
		
		    <TextView
		        android:id="@+id/business_detail_email"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:background="#3b3b3b"
		        android:gravity="left|center_vertical"
		        android:lines="2"
		        android:paddingBottom="2dp"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:paddingTop="2dp"
		        android:text="TextView"
		        android:textColor="#ff0000"
		        android:textSize="20sp" 
		        android:onClick="onEmail"/>
   		    
   		    <TextView
   		        android:layout_width="fill_parent"
   		        android:layout_height="wrap_content"
   		        android:layout_marginLeft="10dp"
   		        android:layout_marginRight="10dp"
   		        android:layout_marginTop="10dp"
   		        android:text="Web URL"
   		        android:textColor="#002299"
   		        android:textSize="20sp"
   		        android:textStyle="bold" />
		
		    <TextView
		        android:id="@+id/business_detail_weburl"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:background="#3b3b3b"
		        android:gravity="left|center_vertical"
		        android:lines="2"
		        android:paddingBottom="2dp"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:paddingTop="2dp"
		        android:text="TextView"
		        android:textColor="#ff0000"
		        android:textSize="20sp" 
		        android:onClick="onWebURL"/>
		    
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginTop="10dp"
		        android:text="Google URL"
		        android:textColor="#002299"
		        android:textSize="20sp"
		        android:textStyle="bold" />
		
		    <TextView
		        android:id="@+id/business_detail_googleurl"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="30dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:background="#3b3b3b"
		        android:gravity="left|center_vertical"
		        android:lines="2"
		        android:paddingBottom="2dp"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:paddingTop="2dp"
		        android:text="TextView"
		        android:textColor="#ff0000"
		        android:textSize="20sp" 
		        android:onClick="onGoogleURL"/>
            
        </LinearLayout>
	</ScrollView>

</LinearLayout>